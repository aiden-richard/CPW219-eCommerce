@model IEnumerable<Book>
@{
    ViewData["Title"] = "Book List";
}

<h2 class="mb-4">Book Listing</h2>

<a asp-action="Create" asp-controller="Book" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Create New Book
</a>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-info">No books found.</div>
}
else
{
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(m => m.First().Title)</th>
                <th class="text-end">@Html.DisplayNameFor(m => m.First().Price)</th>
                <th style="width: 1%;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@Html.DisplayFor(_ => book.Title)</td>
                <td class="text-end">@Html.DisplayFor(_ => book.Price)</td>
                <td class="text-nowrap">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-outline-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}